extends layout

block content

 .containers
      h1 about me...
      p Contact me using form.

   .container
              form.form-horizontal(role='form', method='post', action='/contact/send')
             .form-group
             label.col-sm-2.control-label(for='name') Your Name
            .col-sm-10
             input#name.form-control(type='text', name='name', placeholder=' Name', value='')
            .form-group
             label.col-sm-2.control-label(for='email') Email
            .col-sm-10
             input#email.form-control(type='email', name='email', placeholder='example@domain.com', value='')
            .form-group
             label.col-sm-2.control-label(for='message') Message
            .col-sm-10
            textarea.form-control(rows='4', name='message')
           .form-group
           .col-sm-10.col-sm-offset-2
            input#submit.btn.btn-primary(name='submit', type='submit', value='Send')
           .form-group
           .col-sm-10.col-sm-offset-2     